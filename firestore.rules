rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        request.auth.uid in ['IIP8rWwMCeZ62Svix1lcZPyRkRj2', 'BAhEHbxh31MgdhAQJza3SVJ7cIh2'];
    }

    // Customers collection
    match /customers/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      // Allow users to update their own document
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    // Series collection - public read
    match /series/{seriesId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Episodes collection - public read
    match /episodes/{episodeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Credit transactions - users can read their own
    match /credit-transactions/{transactionId} {
      allow read: if isAuthenticated() && 
        (resource.data.customerId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && 
        request.resource.data.customerId == request.auth.uid;
      allow update, delete: if false;
    }

    // Watch history
    match /watchHistory/{historyId} {
      allow read, write: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }

    // User ratings
    match /users/{userId}/ratings/{ratingId} {
      allow read, write: if isOwner(userId);
    }

    // Activities
    match /activities/{activityId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow write: if false;
    }
    
    // User activities (different from activities)
    match /userActivities/{activityId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      // Allow creation from server (admin) or by the user themselves
      allow create: if isAdmin() || 
        (isAuthenticated() && request.resource.data.userId == request.auth.uid);
      allow update, delete: if false;
    }
    
    // Ratings collection
    match /ratings/{ratingId} {
      allow read: if true; // Public read for ratings
      allow write: if isAuthenticated();
    }
    
    // Series ratings
    match /series/{seriesId}/ratings/{ratingId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Episode ratings
    match /series/{seriesId}/episodes/{episodeId}/ratings/{ratingId} {
      allow read: if true;
      allow write: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Episode stats collection (for average ratings)
    match /episodeStats/{statsId} {
      allow read: if true; // Public read for episode stats
      allow write: if isAuthenticated(); // Allow authenticated users to update stats
    }
    
    // Series stats collection
    match /seriesStats/{statsId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
